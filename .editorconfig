# .editorconfig project file
# https://EditorConfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.toml]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab
